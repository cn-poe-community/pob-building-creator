{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution":"NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/*"]
}
